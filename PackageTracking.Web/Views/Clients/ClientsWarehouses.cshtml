@model PackageTracking.Data.Client
<p>
    @Html.ActionLink("Добавить", "Create", "Warehouses", new { clientId = Model.ClientId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
    </tr>

    @foreach (var item in Model.Warehouses)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", "Warehouses", new { id = item.WarehouseId }, null)
            </td>
            <td>
                @item.Creator.Name
            </td>
            <td>
                @item.CreatedOn.ToLocalTime()
            </td>
            <td>
                @Html.CheckBox("Статус", item.Enabled, new { disabled = "disabled" })
                @Html.ActionLink(item.Enabled ? "Выкл" : "Вкл", "Enable", "Warehouses", new { id = item.WarehouseId }, null)
            </td>
        </tr>
    }

</table>


